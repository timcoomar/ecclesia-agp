.nav-mobile
  display     none
  padding     2.5rem 0 .2rem
  text-align  center
  +below(500px)
    display   block
  .menu-mobile__reveal
    font-size 2.2rem
  .menu-mobile
    display   none
    a
     display  block
     padding  .6rem .3rem 0
     font-size 2rem
  
.menu-home
  text-align  center
  padding     5.5rem 0 3rem
  +below(980px)
      padding     4.8rem 0 2rem
  +below(650px)
      padding     3.5rem 0 1rem
  +below(500px)
      display     none // hide on mobiles
  > li 
    display   inline-block
    margin    0 2.5rem
    +below(980px)
      margin  0 2rem
    +below(800px)
      margin  0 1.3rem
    +below(650px)
      margin  0 1rem
    +below(600px)
      margin  0 .5rem
    > a 
      text-transform    uppercase
      font-size         2.8rem
      font-weight       300
      letter-spacing    2px
      +below(980px)
        font-size       2.4rem
      +below(800px)
        font-size       2rem
        letter-spacing  1px
      +below(650px)
        font-size       1.6rem
      +below(600px)
        font-size       1.4rem
      